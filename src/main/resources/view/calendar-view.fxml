<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox spacing="10.0">
         <children>
            <!-- Barra de Navegação -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="previousMonthButton" mnemonicParsing="false" onAction="#previousMonth" text="&lt; Mês Anterior" />
                  <Button fx:id="todayButton" mnemonicParsing="false" onAction="#goToToday" text="Hoje" />
                  <Button fx:id="nextMonthButton" mnemonicParsing="false" onAction="#nextMonth" text="Mês Seguinte &gt;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshCalendar" text="Atualizar" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
            
            <!-- Barra de Status -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="statusLabel" text="Carregando calendário..." />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Sistema de Calendário v1.0" styleClass="version-label" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <!-- Container Principal do Calendário -->
   <center>
      <BorderPane fx:id="calendarContainer" />
   </center>
   
   <!-- Barra Inferior com Informações -->
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Legenda:" />
            <Label text="● Card" styleClass="legend-card" />
            <Label text="● Task" styleClass="legend-task" />
            <Label text="● Evento" styleClass="legend-event" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Use os botões para navegar entre os meses" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
